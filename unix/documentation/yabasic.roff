>  Example
>  
>  clear screen
>  dim col$(7):for a=0 to 7:read col$(a):next a
>  do
>    print color(col$(ran(7)),col$(ran(7))) " Hallo ";
>    pause 0.01
>  loop
>  data "black","white","red","blue"
>  data "green","yellow","cyan","magenta"
