      <refentry id="ref_tan">
	<refmeta>
	  <refentrytitle>tan()</refentrytitle>
	</refmeta>
	<refnamediv>
	  <refname>tan()</refname>
	  <refpurpose>return the tangent of its argument</refpurpose>
	</refnamediv>
